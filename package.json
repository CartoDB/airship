{
  "name": "@carto/airship",
  "version": "0.0.0",
  "description": "CARTO Airship framework",
  "main": "index.js",
  "repository": "git@github.com:CartoDB/airship.git",
  "author": "CARTO Dev Team",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "aws-sdk": "^2.300.0",
    "backstopjs": "^3.5.5",
    "chokidar": "^2.0.4",
    "concurrently": "^3.6.1",
    "fastly": "^2.2.0",
    "lerna": "^2.11.0",
    "map-stream": "0.0.7",
    "mime": "^2.3.1",
    "serve": "^9.6.0",
    "vinyl-fs": "^3.0.3",
    "zlib": "^1.0.5"
  },
  "scripts": {
    "build:styles": "lerna exec --scope @carto/airship-style -- npm run build",
    "build": "lerna run --parallel build",
    "changelog": "conventional-changelog -p angular -o CHANGELOG.md -r 0",
    "dev": "rimraf www && concurrently 'lerna run --parallel dev' 'node ./scripts/copy-styles-html-to-www.js' --kill-others",
    "lint:fix": "lerna run lint:fix",
    "lint": "lerna run lint",
    "postinstall": "lerna bootstrap --hoist",
    "publish": "npm install && npm run build && npm run test && lerna publish && ./release.sh",
    "serve": "lerna run --parallel serve",
    "showcase": "npm run build && concurrently 'serve' 'open http://localhost:5000/catalog'",
    "test:components:watch": "lerna exec --scope @carto/airship-components -- npm run test:watch",
    "test:components": "lerna exec --scope @carto/airship-components -- npm run test",
    "test:styles": "npm run build:styles && docker run --rm -v $(pwd):/src backstopjs/backstopjs test --configPath=backstop.config.js; open ./backstop_data/html_report/index.html",
    "test:styles:ci": "backstop test --configPath=backstop.config.js",
    "test:build:references": "npm run build:styles && docker run --rm -v $(pwd):/src backstopjs/backstopjs reference --i --configPath=backstop.config.js",
    "test:reset:references": "docker run --rm -v $(pwd):/src backstopjs/backstopjs reference --configPath=backstop.config.js",
    "test:watch": "lerna run --parallel test:watch",
    "test": "npm run lint && npm run test:components && npm run test:styles"
  }
}
