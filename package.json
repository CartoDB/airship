{
  "name": "@carto/airship",
  "version": "0.0.0",
  "description": "CARTO Airship framework",
  "main": "index.js",
  "repository": "git@github.com:CartoDB/airship.git",
  "author": "Carto Dev Team",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "backstopjs": "^3.5.2",
    "chokidar": "^2.0.4",
    "concurrently": "^3.6.0",
    "lerna": "^2.11.0",
    "serve": "^9.2.0",
    "vinyl-fs": "^3.0.3"
  },
  "scripts": {
    "build:styles": "lerna exec --scope @carto/airship-style -- npm run build",
    "build": "lerna run --parallel build",
    "clean:www": "rimraf www",
    "dev": "npm run clean:www && concurrently 'lerna run --parallel dev' 'node ./scripts/copy-styles-html-to-www.js' --kill-others",
    "lint:fix": "lerna run lint:fix",
    "lint": "lerna run lint",
    "postinstall": "lerna bootstrap --hoist",
    "release": "lerna publish --npm-tag prerelease",
    "serve": "lerna run --parallel serve",
    "showcase": "npm run build && concurrently 'serve' 'open http://localhost:5000/catalog'",
    "test:components:watch": "lerna exec --scope @carto/airship-components -- npm run test:watch",
    "test:components": "lerna exec --scope @carto/airship-components -- npm run test",
    "test:styles": "docker run --rm -v $(pwd):/src backstopjs/backstopjs test --configPath=backstop.config.js",
    "test:watch": "lerna run --parallel test:watch",
    "test": "lerna run test",
    "ci:styles": "backstop test --configPath=backstop.config.js --report=ci",
    "visual:reference": "docker run --rm -v $(pwd):/src backstopjs/backstopjs reference --i --configPath=backstop.config.js",
    "visual:reset": "docker run --rm -v $(pwd):/src backstopjs/backstopjs reference --configPath=backstop.config.js",
    "visual:test": "docker run --rm -v $(pwd):/src backstopjs/backstopjs test --configPath=backstop.config.js; open ./backstop_data/html_report/index.html"
  }
}
